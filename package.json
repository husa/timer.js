{
  "name": "timer.js",
  "version": "1.0.4",
  "description": "Simple and lighweight but powerfull eventdriven JavaScript timer",
  "main": "dist/timer.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/husa/timer.js.git"
  },
  "bugs": {
    "url": "http://github.com/husa/timer.js/issues"
  },
  "homepage": "https://github.com/husa/timer.js",
  "keywords": [
    "timer.js",
    "timer",
    "time",
    "measure",
    "start",
    "stop",
    "pause"
  ],
  "author": "husa",
  "license": "MIT",
  "scripts": {
    "lint": "prettier --check src && eslint src",
    "test": "node --test",
    "prepare": "husky install",
    "build": "mkdir -p dist && cp src/timer.js dist/timer.js"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,scss,md}": "prettier --write"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  }
}
